<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostWantedAdActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/imageView2"
            android:src="@drawable/bg_image_400x60"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/textBookDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/book_details"
            android:textSize="10pt"
            android:textColor="@color/toolbar_background"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/book_details_title"
            android:id="@+id/textBookDetailsTitle"
            android:textSize="9pt"
            android:layout_marginTop="46dp"
            android:layout_below="@+id/textBookDetails"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/book_details_author"
            android:id="@+id/textBookDetailsAuthor"
            android:textSize="9pt"
            android:layout_below="@+id/textBookDetailsTitle"
            android:layout_alignLeft="@+id/textBookDetailsTitle"
            android:layout_alignStart="@+id/textBookDetailsTitle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/book_details_desc"
            android:id="@+id/textBookDetailsDesc"
            android:textSize="9pt"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/textBookDetailsAuthor"
            android:layout_alignStart="@+id/textBookDetailsAuthor" />

        <Button
            android:id="@+id/buttonEditPost"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/book_edit_button"
            android:layout_alignWithParentIfMissing="false"
            android:layout_marginTop="63dp"
            android:layout_below="@+id/textBookDetailsDesc"
            android:layout_alignLeft="@+id/textBookDetailsDesc"
            android:layout_alignStart="@+id/textBookDetailsDesc" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/book_delete_button"
            android:id="@+id/buttonDeletePost"
            android:layout_alignTop="@+id/buttonEditPost"
            android:layout_alignRight="@+id/textBookDetailsTitle"
            android:layout_alignEnd="@+id/textBookDetailsTitle" />

    </RelativeLayout>


    <!--Navigation Bar-->
    <RelativeLayout
        android:id="@+id/navbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/imageButtonBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageButtonSell"
            android:layout_marginRight="20dp"
            android:src="@drawable/shopping_basket_64" />

        <ImageButton
            android:id="@+id/imageButtonSell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/book_with_dollar_price_64"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:id="@+id/imageButtonBookWanted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageButtonSell"
            android:layout_marginLeft="20dp"
            android:src="@drawable/hanging_sign_64" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_above="@+id/navbar">

    </RelativeLayout>

</RelativeLayout>