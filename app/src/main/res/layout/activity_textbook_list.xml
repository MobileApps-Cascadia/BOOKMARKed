<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".TextbookList"
    android:id="@+id/RelativeLayout">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/bg_image_400x60"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Textbook List"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textColor="#ffff00"
        android:layout_below="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/textView"
       >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Application Development"
                android:id="@+id/textView2"
                android:textColor="#ffff00" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:text=">"
                android:textColor="#ffff00"
                android:backgroundTint="#000000"
                android:textAlignment="center"
                android:layout_column="15" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Java Introduction"
                android:id="@+id/textView3"
                android:textColor="#ffff00" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText2"
                android:text="Edit"
                android:backgroundTint="#000000"
                android:textColor="@android:color/black"
                android:layout_column="15" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C# Advanced"
                android:id="@+id/textView4"
                android:textColor="#ffff00" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText3"
                android:text=">"
                android:textColor="#ffff00"
                android:backgroundTint="#000000"
                android:layout_column="15" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JavaScript"
                android:id="@+id/textView5"
                android:textColor="#ffff00" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText4"
                android:text=">"
                android:backgroundTint="#000000"
                android:textColor="#ffff00"
                android:layout_column="15" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HTML"
                android:id="@+id/textView6"
                android:textColor="#ffff00" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText5"
                android:text="Edit"
                android:textColor="@android:color/black"
                android:backgroundTint="#000000"
                android:layout_column="15" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculus"
                android:id="@+id/textView7"
                android:textColor="#ffff00" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText6"
                android:text=">"
                android:backgroundTint="#000000"
                android:textColor="#ffff00"
                android:textAlignment="center"
                android:layout_column="15" />
        </TableRow>
    </TableLayout>
    <RelativeLayout
        android:id="@+id/navbar2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

        <ImageButton
            android:id="@+id/imageButtonBuy2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageButtonSell"
            android:layout_marginRight="20dp"
            android:src="@drawable/shopping_basket_64" />

        <ImageButton
            android:id="@+id/imageButtonSell2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/book_with_dollar_price_64"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:id="@+id/imageButtonBookWanted2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hanging_sign_64"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</RelativeLayout>
